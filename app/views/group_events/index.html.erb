<div class="container">
    <div class="row ">
        <div class="offset-2 col-sm-8 col-md-8 col-lg-8" >
            <h3 class="text-center" >Listing Group Events</h3>

            <%= link_to 'New Group Event', new_group_event_path, class: "btn btn-inverse btn-primary" %>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Desription</th>
                  <th scope="col">Duration</th>
                  <th scope="col">Start Date</th>
                  <th scope="col">End Date</th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>

                </tr>
              </thead>
              <tbody>

              <% @group_events.each do |group_event| %>
                <tr>
                  <td><%= group_event.name %></td>
                  <td><%= group_event.description.html_safe %></td>
                  <td><%= group_event.duration %></td>
                  <td><%= date_format(group_event.start_date)%></td>
                  <td><%= date_format(group_event.end_date) %></td>
                  <td><%= link_to 'Show', group_event_path(group_event), class: "btn btn-dark" %></td>
                  <td><%= link_to 'Edit', edit_group_event_path(group_event), class: "btn btn-warning" %></td>
                  <td><%= link_to 'Destroy', group_event_path(group_event), class: "btn btn-danger", 
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
                  <%if group_event.draft?%>
                    <td><%= button_to 'Publish', publish_event_group_events_path(id: group_event), class: "btn btn-primary mt-2", method: :post %></td>
                    <%else%>
                    <td><span class= "btn btn-success">Published</span></td>
                  <%end%>

                </tr>
              <% end %>

              </tbody>


            </table>
    </div>
  </div>
</div>
