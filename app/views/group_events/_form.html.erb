  
  <%= form_for @group_event do |f| %>

    <div class="form-group">
      <%= f.label :name, "Group Name", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :Description, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, rows: 5, cols: 25, class: "form-control tinymce" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start_date, 'Start Date', class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :Duration, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.number_field :duration, class: "form-control" %>
      </div>
    </div>

    <%= f.fields_for :address do |address_fields| %>
      <div class="form-group">
        <%= address_fields.label :Country , class: "col-md-4 control-label"%>
        <div class="col-md-8">
          <%= address_fields.text_field :country, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= address_fields.label :City, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= address_fields.text_field :city, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= address_fields.label :State, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= address_fields.text_field :state, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= address_fields.label :zip, 'Zip code', class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= address_fields.text_field :zip, class: "form-control" %>
        </div>
      </div>

    <% end %>
    <div class="form-group">
      <div class="text-right d-flex justify-content-between">
        <%= f.submit :Submit, class: 'btn btn-success'%>
      </div>
    </div>

    <% if @group_event.errors.any? %>
      <div id="error_explanation">
       
        <ul>
          <% @group_event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    
  <% end %>
  
  <%= tinymce %>
